<h1 align="center">Discover Movies</h1>

<%= button_to "Find Top Rated Movies", user_movies_path, method: :get, params: { q: 'top_rated' } %><br><br><br>
<h2 align="center">OR</h2>
<%= form_with url: user_movies_path, method: :get, local: :true do |f|  %>
  <%= f.label :search_key  %>
  <%= f.text_field :q   %>
  <%= f.submit "Find Movies"  %>
<% end %>
